{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "pwa-node",
        "request": "launch",
        "name": "Debug Next.js",
        "runtimeExecutable": "node",
        "runtimeArgs": [
          "--inspect",
          "node_modules/next/dist/bin/next"
        ],
        "port": 3000,
        "restart": true,
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "env": {
          "NODE_ENV": "development"
        },
        "skipFiles": ["<node_internals>/**"]
      }
    ]
  }
  